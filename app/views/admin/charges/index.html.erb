<h1><%= t('.title') %></h1>

<% if @charges.empty? %>
    <h3><%= t('.no_charge_available') %></h3>
<% end %>

<% @charges.each do |charge| %>
    <%= link_to charge.final_client_name, admin_charge_path(charge) %>
    <%= charge.token %>
    <%= number_to_currency charge.original_value %>
    <%= number_to_currency charge.discount_value %>
<% end %>