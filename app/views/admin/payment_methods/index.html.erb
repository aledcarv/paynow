<h1><%= t('.title') %></h1>

<% if @payment_methods.empty? %>
    <h3><%= t('.no_payment_method_available') %></h3>
<% end %>

<% @payment_methods.each do |pay_method| %>
    <h3><%= link_to pay_method.name, [:admin, pay_method] %></h3>
    <p><%= number_to_percentage pay_method.tax_porcentage, precision: 1 %></p>
    <p><%= number_to_currency pay_method.tax_maximum %></p>
<% end %>

<hr>

<div>
    <p><%= link_to t('.register_payment_method'), new_admin_payment_method_path %></p>
</div>