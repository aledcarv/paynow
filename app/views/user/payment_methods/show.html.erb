<h1><%= @payment_method.name %></h1>

<dl>
    <dt>Taxa por cobrança:</dt>
    <dd><%= number_to_percentage @payment_method.tax_porcentage, precision: 1 %></dd>
    <dt>Taxa máxima:</dt>
    <dd><%= number_to_currency @payment_method.tax_maximum %></dd>
    <dt>Status:</dt>
    <dd><%= @payment_method.status ? 'Ativo' : 'Inativo' %></dd>
</dl>

<%= image_tag @payment_method.icon_payment_type %>

<% if @payment_method.boleto? %>
    <%= link_to 'Selecionar este meio de pagamento', new_user_payment_method_boleto_method_path(@payment_method) %>
<% elsif @payment_method.pix? %>
    <%= link_to 'Selecionar este meio de pagamento', new_user_payment_method_pix_method_path(@payment_method) %>
<% elsif @payment_method.card? %>
    <%= link_to 'Selecionar este meio de pagamento', new_user_payment_method_card_method_path(@payment_method) %>
<% end %>

<%= link_to 'Voltar', user_payment_methods_path %>