<h1><%= t('.title') %></h1>

<% if @products.empty? %>
    <p><%= t('.no_product_available') %></p>
<% end %>

<% @products.each do |product| %>
    <h3><%= link_to product.name, [:user, @company, product] %></h3>
    <p><%= number_to_currency product.price %></p>
<% end %>

<div>
    <%= link_to t('.register_product'), new_user_company_product_path(@company) %>
</div>