<%= form_with model: [:user, company, product] do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.label :price %>
    <%= form.number_field :price %>
    <%= form.label :boleto_discount %>
    <%= form.number_field :boleto_discount %>
    <%= form.label :pix_discount %>
    <%= form.number_field :pix_discount %>
    <%= form.label :card_discount %>
    <%= form.number_field :card_discount %>
    <%= form.submit submit_text %>
<% end %>

<% if product.errors.any? %>
    <p>Total de erro(s): <%= product.errors.count %></p>
    <ul>
        <% product.errors.each do |error| %>
            <li><%= error.full_message %></li>
        <% end %>
    </ul>
<% end %>